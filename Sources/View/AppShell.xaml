<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="View.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:View.Page"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        <Tab Title="Home"
             >
           <ShellContent ContentTemplate="{DataTemplate local:HomeView}" Route="MainPage"/>
       </Tab>
        <Tab Title="Champions"
             
            >
           <ShellContent ContentTemplate="{DataTemplate local:ChampionsView}" Route="ChampionsView" FlyoutIcon="iclg.png" />
       </Tab>
        
       
    </TabBar>

</Shell>

